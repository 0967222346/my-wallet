{
  "name": "monya",
  "version": "2.0.2",
  "description": "The easiest cryptocurrency wallet",
  "main": "src/index.js",
  "scripts": {
    "start": "node_modules/.bin/electron ./src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.6.2"
  },
  "build": {
    "appId": "org.missmonacoin.monya",
    "linux": {
      "category": "Office;Finance;",
      "icon": "assets/",
      "desktop": {
        "Name": "monya",
        "GenericName": "monya",
        "X-GNOME-FullName": "monya",
        "Comment": "The easiest cryptocurrency wallet",
        "Type": "Application",
        "Terminal": "false",
        "StartupNotify": "false",
        "Categories": "Office;Finance;",
        "MimeType": "application/x-monacoin;x-scheme-handler/monacoin;"
      }
    },
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "perMachine": true
    },
    "protocols": [
      {
        "name": "monacoin",
        "role": "Viewer",
        "schemes": [
          "monacoin"
        ]
      }
    ]
  }
}
